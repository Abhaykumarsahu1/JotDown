<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.jotdown.mvvm.NotesViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".fragments.NewNoteFragment">

                <EditText
                    android:id="@+id/Title_newNotes"
                    android:layout_width="382dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner"
                    android:hint="Title..."
                    android:padding="18dp"
                    android:text="@={viewModel.inputTitle}"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.551"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.205" />

                <TextView
                    android:id="@+id/dateTimeDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.036"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Title_newNotes" />

                <EditText
                    android:id="@+id/newNoteSubtitle"
                    android:layout_width="382dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:background="@drawable/round_corner"
                    android:hint="Sub Title..."
                    android:padding="18dp"
                    android:text="@={viewModel.inputSubTitle}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.482"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Title_newNotes" />

                <ImageView
                    android:id="@+id/imageViewNewNote"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.483"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/newNoteSubtitle" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="382dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/round_corner"
                    android:hint="@string/write_your_notes_here"
                    android:padding="18dp"
                    android:text="@={viewModel.inputNoteText}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.551"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewNewNote">

                </EditText>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/btnsLayout"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="346dp">

            <!-- Your buttons with constraints as needed -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/voiceNoteBtn"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/voice"
                app:backgroundTint="#F9F9F9" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/imagegALLERYbUTN"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="30dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/imagegallery"
                app:backgroundTint="#F9F9F9" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/ReminderAlarmbtn"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="29dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/alarm"
                app:backgroundTint="#F9F9F9" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButtonNewNote"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/checkmark"
                app:backgroundTint="#F9F9F9" />
        </LinearLayout>
    </LinearLayout>
</layout>
